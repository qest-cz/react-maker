{
  "name": "react-maker",
  "displayName": "React maker",
  "description": "Extension that creates react component in typescript.",
  "version": "0.2.3",
  "publisher": "Qest-cz",
  "repository": "https://github.com/qest-cz/react-maker",
  "icon": "images/logo.png",
  "categories": [
    "Snippets",
    "Formatters",
    "Other"
  ],
  "keywords": [
    "react",
    "typescript",
    "automation"
  ],
  "engines": {
    "vscode": "^1.17.0"
  },
  "activationEvents": [
    "onCommand:extension.create-component",
    "onCommand:extension.create-styled-component"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.create-component",
        "title": "Create component"
      },
      {
        "command": "extension.create-styled-component",
        "title": "Create styled component"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.create-component",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.create-styled-component",
          "group": "1_modification",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "React maker",
      "properties": {
        "reactMaker.useComponentNameAsFileName": {
          "type": "boolean",
          "default": false,
          "description": "Will use the component name as filename instead of index.tsx"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "yarn run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/node": "^12.6.8",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.28"
  },
  "dependencies": {
    "fs": "^0.0.1-security"
  }
}
